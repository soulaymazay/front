<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/moyen_list_edit"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_weight="3"

        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:layout_weight="1"
            android:background="@drawable/mode"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="198dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical" />

                <ImageView
                    android:id="@+id/imagemoyen"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/aaa" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="243dp"
                android:layout_marginTop="10dp"

                android:layout_weight="2"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/marquemoyen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/allerta"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/nommoyen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/allerta"

                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/etatmoyen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/allerta"
                    android:textColor="@color/black"
                    android:text="TextView"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/couleurmoyen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:layout_marginLeft="20dp"
                    android:text="TextView"

                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/annemoyen"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/allerta"
                    android:layout_marginLeft="20dp"

                    android:textColor="@color/black"
                    android:text="TextView"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/RefuserMoyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_login55"
                        android:text="Refuser" />

                    <Button
                        android:id="@+id/AccepterMoyen0"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_1"
                        android:text="Accepter"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/AccepterMoyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/button_login55"
                        android:text="Accepter" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>