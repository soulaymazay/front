<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-55dp"
    android:background="@drawable/inter1"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="402dp"
        android:layout_height="829dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="-5dp">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"

            android:padding="10dp"
            android:src="@drawable/logo3"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="465dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_1"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <EditText
                android:id="@+id/nomChauffeur"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/per"
                android:drawablePadding="80dp"
                android:hint=" nom" />

            <EditText
                android:id="@+id/emailChauffeur"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/eml"
                android:drawablePadding="80dp"
                android:hint=" E-mail" />

            <EditText
                android:id="@+id/agechauffeur"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/eml"
                android:drawablePadding="50dp"
                android:hint=" Age entre 18 et 55" />


            <EditText
                android:id="@+id/numPermis"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/permis"
                android:drawablePadding="50dp"
                android:hint="numéro de permis" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/mot"
                android:drawablePadding="50dp"
                android:hint=" mot de passe"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/passwordVerify"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/mot2"

                android:drawablePadding="50dp"
                android:hint="vérifier mot de passe"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/buttonChoose"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/button_login1"
                android:text="choisir une photo de votre profil"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:srcCompat="@drawable/photo" />


            <Button
                android:id="@+id/loginButton"
                android:layout_width="183dp"
                android:layout_height="53dp"
                android:layout_marginLeft="70dp"

                android:layout_marginTop="1dp"
                android:background="@drawable/button_login1"
                android:text="s'inscrir"
                android:textColor="@color/white"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>